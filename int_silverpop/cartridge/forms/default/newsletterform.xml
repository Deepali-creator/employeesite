<?xml version="1.0" encoding="UTF-8"?>
<form xmlns="http://www.demandware.com/xml/form/2008-04-19">
	<field formid="firstName" label="profile.firstname" type="string" mandatory="true" max-length="50" missing-error="address.firstname.missing" range-error="address.field.invalid" />
	<field formid="lastName" label="profile.lastname" type="string" max-length="50" missing-error="address.lastname.missing" range-error="address.field.invalid" />
	<field formid="emailAddress" label="billing.email" type="string" mandatory="true" regexp="^[\w.%+-]+@[\w.-]+\.[\w]{2,6}$" max-length="100" missing-error="address.email.invalid" range-error="address.email.invalid" parse-error="address.email.invalid" value-error="address.email.invalid"/>
	<field formid="emailConfirm" label="billing.confirmemail" type="string" regexp="^[\w.%+-]+@[\w.-]+\.[\w]{2,6}$" max-length="100" missing-error="address.email.invalid" range-error="address.email.invalid" parse-error="address.email.invalid" value-error="address.email.invalid"/>
	<field formid="contacttype" label="newsletter.contacttype" type="string" missing-error="select" ><options>
		<option optionid="salon" 	label="newsletter.salon" 		value="salon"/>
		<option optionid="spa" 		label="newsletter.spa" 			value="spa"/>
		<option optionid="consumer"	label="newsletter.consumer" 	value="consumer"/>
		<option optionid="barber"	label="newsletter.barber" 		value="barber"/>
	</options></field>

	<field formid="confirm" label="newsletter.confirm" type="boolean"/>

	<field formid="language" label="newsletter.language" type="string"><options>
		<option optionid="en_CA" 	label="newsletter.english" 		value="en_CA"/>
		<option optionid="fr_CA" 	label="newsletter.french" 		value="fr_CA"/>
	</options></field>
	<action formid="submitnewsletter" label="newsletter.submit" valid-form="true"/>
</form>
