<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.0 Transitional//EN">
<!-- TemplateComment :  EMail form for inviting someone to shop  -->
<iscontent type="text/html" charset="UTF-8"/>
<isinclude template="util/modules"/>
<subject><isif condition="${!empty(pdict.MailSubject)}">${pdict.MailSubject}<iselse/></isif></subject>
<html>
<head>

</head>
<body>
<table width="100%" cellpadding="0" cellspacing="0">
	<tr>
		<td align="center" style="background:#e0e0e0;padding:50px 0;">
			<center>
				<table  style="box-sizing:border-box; background:#ffffff;border:1px solid #999999;width:680px; color: #58585a; padding:15px;">
					<tr>
						<td style="width:70%; font-size:24px;font-family:Helvetica Neue, Helvetica, Arial, sans-serif;padding:20px 20px 20px 0;font-weight:bold;color:#58585a">${Resource.msg('account.sendtofriend.title','account',null)} <isprint value="${pdict.CurrentCustomer.profile.email}" encoding="off"/> </td>
						<td><img width="225" src="${URLUtils.httpStatic('/images/logo@2x.png')}"></img></td>
					</tr>
					<tr>
						<td colspan="2" style="font-size:12px;font-family:arial;padding:20px 0;vertical-align:top;">
							<p style="font-size:14px;">Your friend, ${pdict.CurrentForms.sendtofriend.yourname.value}, wanted to share this BaByliss PRO product with you.<br/>
							Want to find out more? Follow the "View Now" link below.</p>
							<p style="font-size:14px;">Kind Regards,</p>
							<p style="font-size:14px;">The BaByliss PRO Team</p>
						</td>
					</tr>
					<tr>
						<td style="font-size:18px; font-family:Helvetica Neue, Helvetica, Arial, sans-serif; font-weight:bold; padding:20px 0; color: #58585a; border-top:2px solid #cccccc;" colspan="2">
						    ${Resource.msg('account.sendtofriend.productdetails', 'account', null)}
						</td>
					</tr>
					<tr>
						<td style="width:100%;" colspan="2">
							<table style="width:100%; border-spacing:initial; border-bottom:2px solid #cccccc; color: #58585a;font-family:Helvetica Neue, Helvetica, Arial, sans-serif;">
								<tr>
									<th style="font-size:16px; font-family:Helvetica Neue, Helvetica, Arial, sans-serif; color: #58585a; text-align:left; font-weight:bold; padding:0 0 10px;">
										${Resource.msg('account.stocknotification.label.product', 'account', null)}
									</th>
									<th style="font-size:16px; font-family:Helvetica Neue, Helvetica, Arial, sans-serif; color:#58585a; text-align:left; font-weight:bold; padding:0 0 10px;">
										${Resource.msg('account.stocknotification.label.link', 'account', null)}
									</th>
								</tr>
								<tr>
								    <td style="vertical-align:middle; font-weight:bold; font-size:16px; border-top:2px solid #cccccc;">
									   <isscript>
											importScript("util/ProductImageSO.ds");
									   </isscript>
									   <isset name="product" value="${pdict.Product}" scope="page"/>
										<isset name="image" value="${new ProductImage('large', product, 0)}" scope="page"/>
										<isif condition="${!empty(image)}">
											<isset name="thumbnailUrl" value="${image.getURL()}" scope="page"/>
										   	<isset name="imageAlt" value="${image.getAlt()}" scope="page"/>
										   	<isset name="imageTitle" value="${image.getTitle()}" scope="page"/>
										<iselse/>
										  	<isset name="thumbnailUrl" value="${URLUtils.staticURL('/images/noimagesmall.png')}" scope="page"/>
										  	<isset name="imageTitle" value="${item.object.product.name}" scope="page"/>
										 	<isset name="imageAlt" value="${item.object.product.name}" scope="page"/>
										</isif>
										<img style="float:left; display:block; width:120px; height:120px; margin-right:15px; margin-bottom:15px;" src="${thumbnailUrl}" alt="${imageAlt}" title="${imageTitle}"/>
										<div style="padding-top:30px;">
										    <p style="margin:5px 0; width:100%;"><isprint value="${pdict.Product.name}" encoding="off"/></p>
										    <p style="margin:0; width:100%; text-tranform:uppercase;"><isprint value="${pdict.Product.ID}" encoding="off"/></p>
										</div>
										<br style="clear:both;" />
									</td>
								    <td style="width:120px; font-weight:normal; color:#b4907e; font-size:16px;border-top:2px solid #cccccc;">
								        <p style="margin:0; padding-bottom:15px;">
											<a style="color:#b4907e;" href="${URLUtils.http('Product-Show', 'pid', pdict.Product.ID)}" title="${Resource.msg('account.sendtofriend.viewnow','account',null)}">${Resource.msg('account.sendtofriend.viewnow','account',null)}</a>
										</p>
									</td>
								</tr>
							</table>
						</td>
					</tr>
				</table>						
			</center>
		</td>
	</tr>
</table>
	
</body>
</html>